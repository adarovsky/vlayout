types {
    MyItems: list (
        user {
            name: String
        },
        newUser {
            // no fields required
        }
    )
}

inputs {
    items: MyItems
}

layout {
    layer {
        verticalList {
            center { x : 0.5 y : 0.5 }
            size { height: 0.5 }
            model: items

            user {
                label {
                    text: name
                }
            }
            newUser {
                label {
                    text: "add new"
                }
            }
        }
    }
}
