bindings {
    nameField: listTextField
}

types {
    MyItems: list (
        user {
            name: String
        },
        newUser {
            // no fields required
        }
    )
}

inputs {
    items: MyItems
}

layout {
    layer {
        verticalList {
            center { x : 0.5 y : 0.5 }
            size { width: 0.5 }
            fixedSize { width: 200 }
            model: items

            user {
                fixedSize { height: 44 }
                roundRect  {
                    padding { left: 5 right: 5 top: 5 bottom: 5 }
                    strokeWidth: 2
                    strokeColor: #000000
                    cornerRadius: 5
                }
                nameField {
                    center { y: 0.5 }
                    padding { left: 40 }
                    text: name
                }

            }
            newUser {
                label {
                    text: "add new"
                }
            }
        }
    }
}
