bindings {
    myButton: button
}

inputs {
    counter: Number
}

functions {
    testFunction(s: String, x: Number) => @("$1-$2", s, String(x))
}

layout {
   layer {
      id: "background"
      z_order: 1

      roundRect {
          center { x: 0.5 y: 0.5 }
          size { width: 0.8 height: counter % 2 == 1 ? nil : 0.3 }
          aspect: counter % 2 == 1 ? 16/9 : nil
          backgroundColor: #cccccc
      }
   }

   layer {
      id: "label"
      z_order: 2

      vertical {
          alignment: .center
          center { x: 0.5 y: 0.5 }
          label {
              text: testFunction("prefix", counter)
          }
          myButton {
              backgroundColor: #dddddd
              strokeColor: #aaaaaa
              strokeWidth: 4
              text: "Click me"
              cornerRadius: 0.5
          }
      }
   }
}
