bindings {
}

types {
    TestList: list(
        item {
            name: String
        }
    )
}

inputs {
    counter: Number
    test: String
    testList: TestList
    window {
        height: Number
        width: Number
    }
}

properties {
    prefix: ""
    screen {
        bottomHeight: 100
        aspect: window.width / (window.height - screen.bottomHeight)
    }
}

layout {
    layer {
        id: "main"
        backgroundColor: #1c192c

        absolute {
            center { x: 0.5 }
            padding { top: 0 }
            aspect: 2
            size {
                width: screen.aspect > 2 ? nil : 1
                height: screen.aspect <= 2 ? nil : (window.height - screen.bottomHeight) / window.height
            }

            backgroundColor: #cceeff
        }

        absolute {
            padding { left: 0 bottom: 0 right: 0 }
            fixedSize { height: screen.bottomHeight }
            backgroundColor: #323040
        }
    }
}
