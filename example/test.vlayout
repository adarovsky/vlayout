bindings {
}

types {
    TestList: list(
        item {
            name: String
        }
    )
}

inputs {
    counter: Number
    test: String
    testList: TestList
}

layout {
    layer {
        z_order: 1
        fullscreen: false

        vertical {
            center { x: 0.5 y: 0.5 }
            label {
                text: "test header"
            }
            absolute {
                backgroundColor: #cccccc

                // fixedSize { height: 300 }

                verticalList {
                    model: testList
                    spacing: 10

                    padding { left: 10 top: 10 bottom: 10 right: 10 }

                    item {
                        backgroundColor: #ccffcc
                        label {
                            padding { left: 10 top: 10 bottom: 10 right: 10 }
                            text: name
                        }
                    }
                }
            }
        }
    }
}
