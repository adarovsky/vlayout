bindings {
}

types {
    TestList: list(
        item {
            name: String
        }
    )
}

inputs {
    counter: Number
    test: String
    testList: TestList
}

properties {
    outerTickerHeadline: "Sample headline"
    outerTickerContent: ""
    session {
        hostIFBJoined: false
        hostIFBOn: false
    }
}

layout {
    layer {
        z_order: 1
        fullscreen: false

        vertical{
          padding {left:0 top:0 right:0 bottom:0}
            spacing: 20
          //---------- players locked alert -------
          absolute{
            roundRect{
              padding{left: 0 top: 0 bottom: 0 right: 0}
              backgroundColor: #f5f5f6
              cornerRadius: 10
            }
            vertical{
              padding {left: 20 top: 20 bottom: 20 right: 20}
              spacing: 20
              alignment: .fill

              label{
                text: "Players locked"
                font: Font(22)
                textColor:#fa6d41
              }
              label{
                maxLines: 20
                textColor:#fa6d41
                font: Font(20)
                text: "All players are locked for sketch round. Click “Disconnect” to remove user. "
              }
            }
          }
        }
    }
}
