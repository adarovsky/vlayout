bindings {
    confirmationRejectButton: button
    confirmationAcceptButton: button
}

types {
    TestList: list(
        item {
            name: String
        }
    )
}

inputs {
    counter: Number
    test: String
    testList: TestList
    window {
        height: Number
        width: Number
    }
}

properties {
    prefix: ""
    screen {
        bottomHeight: 100
        aspect: window.width / (window.height - screen.bottomHeight)
    }
}

layout {
    layer {
        absolute {
            center {
                x: 0.5 y: 0.5
            }
            size {
                width: 0.5
                height: 0.5
            }

            backgroundColor: #eeffee

            stack {
                id: "test_stack"
                center { y: 0.5 }
                padding { left: 60 right: 10 }
                aspect: 16/9

                backgroundColor: #ccddee
                absolute {
                    confirmationAcceptButton {
                        center { x: 0.5 y: 0.5 }
                        text: "sample button"
                        backgroundColor: #99ccff
                        cornerRadius: 0.5

                        tooltip {
                            theme: "light-border"
                            placement: .bottom
                            label {
                                id: "test-tooltip"
                                text: "tooltip text"
                                padding { left: 10 top: 10 bottom: 10 right: 10 }
                            }
                        }
                    }
                }
            }
        }
    }
}
