bindings {
}

types {
    TestList: list(
        item {
            name: String
        }
    )
}

inputs {
    counter: Number
    test: String
    testList: TestList
}

properties {
    outerTickerHeadline: "Sample headline"
    outerTickerContent: ""
}

layout {
    layer {
        z_order: 1
        fullscreen: false

        label {
            textColor: #1c192c
            font: Font(22)
            text: "A sample long lpng long line of text that should be wrapped over several lines, but it does not for some reason"
            textAlignment: .left
            backgroundColor: #ccffdd
            center { x: 0.5 y: 0.5 }
            fixedSize { width: 400 }
        }


        absolute{
            alpha: 0
            center { x: 0.5 y: 0.5 }
            fixedSize { width: 400 }
            roundRect{
                padding{left: 0 top: 0 bottom: 0 right: 0}
                backgroundColor: #f5f5f6
                cornerRadius: 10
                strokeColor: #56e3b1
                strokeWidth: 4
            }
            vertical{
                spacing: 30
                padding {left: 20 top: 20 right: 20 bottom: 20}
                alignment: .fill
                roundRect{
                    class: "ShadowControl"
                    fixedSize{width: 16 height: 16}
                    cornerRadius: 0.5
                    backgroundColor: #ff2727
                    alpha: 1
                }
                label {
                    textColor: #1c192c
                    font: Font(22)
                    text: "A sample long lpng long line of text that should be wrapped over several lines, but it does not for some reason"
                    textAlignment: .left
                    backgroundColor: #ccffdd
                }

                label {
                    textColor: #3e3864
                    font: Font(30)
                    text: "A sample long lpng long line of text that should be wrapped over several lines, but it does not for some reason"
                    maxLines: 5
                    textAlignment: .left
                    backgroundColor: #ffddcc
                }
                vertical{
                    absolute {
                        horizontal {
                            alignment: .center
                            spacing: 10
                            padding { left: 0 bottom: 10 right: 10 top: 10 }
                            absolute {
                                fixedSize { width: 30 height: 30 }
                                roundRect {
                                    padding { left: 0 bottom: 0 right: 0 top: 0 }
                                    cornerRadius: 0.5
                                    backgroundColor: #95929f
                                }
                                label {
                                    textAlignment: .center
                                    center { x: 0.5 y: 0.5 }
                                    text: "A sample long lpng long line of text that should be wrapped over several lines, but it does not for some reason"
                                    textColor: #ffffff
                                }
                            }
                            label {
                                textColor: #3e3864
                                text: "A sample long lpng long line of text that should be wrapped over several lines, but it does not for some reason"
                            }
                        }
                    }
                }
            }
        }
    }
}
