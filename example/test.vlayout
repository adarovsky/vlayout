bindings {
    confirmationRejectButton: button
    confirmationAcceptButton: button
}

types {
    TestList: list(
        item {
            name: String
        }
    )
}

inputs {
    counter: Number
    test: String
    testList: TestList
    window {
        height: Number
        width: Number
    }
}

properties {
    prefix: ""
    screen {
        bottomHeight: 100
        aspect: window.width / (window.height - screen.bottomHeight)
    }
}

layout {
    layer {
        absolute {
            center {
                x: 0.5 y: 0.5
            }
            fixedSize {
                width: 490
                height: 490
            }

            backgroundColor: #eeffee

            stack {
                id: "test_stack"
                center { y: 0.5 }
                padding { left: 60 right: 10 }
                aspect: 16/9

                    backgroundColor: #ccddee
                roundRect {
                }
            }
        }
    }
}
