bindings {
    testListButton: listButton
}

types {
    TestList: list(
        item {
            name: String
        }
    )
}

inputs {
    counter: Number
    test: String
    testList: TestList
    window {
        height: Number
        width: Number
    }
}

properties {
    prefix: ""
    screen {
        bottomHeight: 100
        aspect: window.width / (window.height - screen.bottomHeight)
    }
}

layout {
    layer {
        testTextField {
            alpha: counter > 0 ? 0 : 1
            center { x: 0.5 y: 0.5 }
            fixedSize { height: 44 }
            size { width: 0.7 }
            placeholder: "enter text"
            autoFocus: true
            backgroundColor: #ccddee
        }
    }
}
