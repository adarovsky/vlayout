bindings {
}

types {
    TestList: list(
        item {
            name: String
        }
    )
}

inputs {
    counter: Number
    test: String
    testList: TestList
    window {
        height: Number
        width: Number
    }
}

properties {
    prefix: ""
    screen {
        bottomHeight: 100
        aspect: window.width / (window.height - screen.bottomHeight)
    }
}

layout {
    layer {
        id: "main"

        verticalList {
            padding { left: 0 right: 0 }
            size { width: 0.5 height: 0.5 }
            center { y: 0.5 }
            model: testList

            item {
                fixedSize { height: 60 }
                label {
                    center { x: 0.5 y: 0.5 }
                    text: name
                }
            }
        }

    }
}
