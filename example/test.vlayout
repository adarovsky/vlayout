bindings {
}

types {
}

inputs {
    counter: Number
}

layout {
    layer {
        z_order: 1
        fullscreen: false

        stack {
            class: "live_indicator"
            padding {
                left: 40
                top: 70
            }

            roundRect {
                backgroundColor: #ff0000
                cornerRadius: 4
            }

            absolute {
                horizontal {
                    spacing: 3
                    padding {
                        left: 6
                        top: 4
                        bottom: 4
                        right: 5
                    }
                    label {
                        text: "LIVE"
                        font: Font(.bold, 13)
                        textColor: #ffffff
                    }
                    roundRect {
                        alpha: counter > 0 ? 1 : 0
                        fixedSize {
                            width: 1
                        }
                        backgroundColor: Color(#ffffff, 0.5)
                    }
                    label {
                        alpha: counter > 0 ? 1 : 0
                        text: ShortString(counter)
                        font: Font(13)
                        textColor: #ffffff
                    }
                }
            }
        }
    }
}
