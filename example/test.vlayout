bindings {
}

types {
    TestList: list(
        item {
            name: String
        }
    )
}

inputs {
    counter: Number
    test: String
    testList: TestList
    window {
        height: Number
        width: Number
    }
}

properties {
    prefix: ""
    screen {
        bottomHeight: 100
        aspect: window.width / (window.height - screen.bottomHeight)
    }
}

layout {
    layer {
        id: "main"

        absolute {
            padding { left: 0 top: 0 bottom: 0 }
            size { width: 0.5 }
            id: "instructing_users"

            testView {
                //backgroundColor: #1c192c

                padding { top: 56 bottom: 56 }
                aspect: 9/16
                center { x: 0.5 y: 0.5 }
            }
        }

    }
}
