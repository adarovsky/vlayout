{
  "name": "@adarovsky/vlayout",
  "version": "1.5.22",
  "description": "A port of simple reactive layout engine running in browsers",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:adarovsky/vlayout.git"
  },
  "author": "Alexander Darovsky",
  "license": "ISC",
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "updateSnapshots": "tsdx test --passWithNoTests --updateSnapshot ",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "bump": "npm version patch && npm publish",
    "prepublishOnly": "tsdx test",
    "coveralls": "tsdx test --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js"
  },
  "dependencies": {
    "caching-map": "^1.0.2",
    "clsx": "^1.1.0",
    "lodash": "^4.17.15",
    "lodash-es": "^4.17.15",
    "uuid": "^8.2.0"
  },
  "peerDependencies": {
    "react": ">=16",
    "rxjs": "^6.5.3"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "es5"
  },
  "module": "dist/vlayout.esm.js",
  "devDependencies": {
    "@testing-library/react": "^9.4.0",
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^24.0.25",
    "@types/lodash": "^4.14.150",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.7",
    "@types/sinon": "^9.0.0",
    "@types/uuid": "^8.0.0",
    "coveralls": "^3.0.9",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.4.3",
    "husky": "^4.2.5",
    "jest": "^24.9.0",
    "prettier": "1.18.2",
    "react": "^16.13.1",
    "react-app-polyfill": "^1.0.6",
    "react-dom": "^16.13.1",
    "rollup-plugin-postcss": "^3.1.1",
    "sinon": "^7.5.0",
    "tsdx": "^0.13.3",
    "tslib": "^1.11.1",
    "typescript": "^4.0.2"
  }
}
