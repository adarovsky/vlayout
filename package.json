    "uuid": "^8.3.2"
  },
  "peerDependencies": {
    "react": ">=16",
    "rxjs": "^6.5.3"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
